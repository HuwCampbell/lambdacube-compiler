instance Component Bool where
  vec2 = V2
  vec3 = V3
  vec4 = V4
  zeroComp = False
  oneComp = True
instance Component Int where
  vec2 = V2
  vec3 = V3
  vec4 = V4
  zeroComp = 0
  oneComp = 1
instance Component Word where
  vec2 = V2
  vec3 = V3
  vec4 = V4
